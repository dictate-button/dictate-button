{
  "name": "dictate-button",
  "version": "2.0.19",
  "description": "Customizable Web Component that adds speech-to-text dictation capabilities to text fields",
  "keywords": [
    "custom-element",
    "dictate",
    "dictation",
    "dictate-button",
    "speech-to-text",
    "speech-recognition",
    "transcription",
    "transcribe",
    "transcribing",
    "voice-to-text",
    "voice-recognition",
    "web-component"
  ],
  "license": "Apache-2.0",
  "type": "module",
  "types": "dist/dictate-button.d.ts",
  "exports": {
    ".": {
      "types": "./dist/dictate-button.d.ts",
      "import": "./dist/dictate-button.js",
      "default": "./dist/dictate-button.js"
    },
    "./libs": {
      "types": "./dist/libs/index.d.ts",
      "import": "./dist/libs/index.js",
      "default": "./dist/libs/index.js"
    },
    "./libs/injectDictateButton": {
      "types": "./dist/libs/injectDictateButton.d.ts",
      "import": "./dist/libs/injectDictateButton.js",
      "default": "./dist/libs/injectDictateButton.js"
    },
    "./libs/injectDictateButtonOnLoad": {
      "types": "./dist/libs/injectDictateButtonOnLoad.d.ts",
      "import": "./dist/libs/injectDictateButtonOnLoad.js",
      "default": "./dist/libs/injectDictateButtonOnLoad.js"
    },
    "./inject-exclusive": {
      "types": "./dist/inject-exclusive.d.ts",
      "import": "./dist/inject-exclusive.js",
      "default": "./dist/inject-exclusive.js"
    },
    "./inject-inclusive": {
      "types": "./dist/inject-inclusive.d.ts",
      "import": "./dist/inject-inclusive.js",
      "default": "./dist/inject-inclusive.js"
    }
  },
  "files": [
    "dist",
    "!dist/404.html"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx}'",
    "deploy": "firebase deploy",
    "prepublishOnly": "pnpm build && pnpm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "solid-element": "^1.9.1",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^4.0.10",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.10",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.10"
  },
  "homepage": "https://github.com/dictate-button/dictate-button",
  "repository": {
    "type": "git",
    "url": "https://github.com/dictate-button/dictate-button.git"
  },
  "bugs": {
    "url": "https://github.com/dictate-button/dictate-button/issues"
  }
}
