{
  "name": "dictate-button",
  "version": "1.0.0",
  "description": "Dictate Button (Web Component)",
  "keywords": [
    "custom-element",
    "dictate",
    "dictation",
    "dictate-button",
    "speech-to-text",
    "speech-recognition",
    "transcription",
    "transcribe",
    "transcribing",
    "voice-to-text",
    "voice-recognition",
    "web-component"
  ],
  "license": "Apache-2.0",
  "main": "dist/dictate-button.es.js",
  "module": "dist/dictate-button.es.js",
  "types": "dist/dictate-button.d.ts",
  "exports": {
    ".": {
      "types": "./dist/dictate-button.d.ts",
      "import": "./dist/dictate-button.es.js"
    },
    "./inject-exclusive": {
      "import": "./dist/inject-exclusive.es.js"
    },
    "./inject-inclusive": {
      "import": "./dist/inject-inclusive.es.js"
    }
  },
  "files": [
    "dist",
    "!dist/404.html"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx}'",
    "deploy": "firebase deploy",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "solid-element": "^1.9.1",
    "solid-js": "^1.9.9"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.8",
    "vite-plugin-static-copy": "^3.1.1"
  },
  "homepage": "https://github.com/kkomelin/dictate-button",
  "repository": {
    "type": "git",
    "url": "https://github.com/kkomelin/dictate-button.git"
  },
  "bugs": {
    "url": "https://github.com/kkomelin/dictate-button/issues"
  }
}
