{
  "name": "dictate-button",
  "version": "0.2.0",
  "description": "Dictate Button (Web Component)",
  "keywords": [
    "custom-element",
    "dictate",
    "dictation",
    "dictate-button",
    "speech-to-text",
    "speech-recognition",
    "transcription",
    "transcribe",
    "transcribing",
    "voice-to-text",
    "voice-recognition",
    "web-component"
  ],
  "license": "Apache-2.0",
  "main": "dist/dictate-button.cjs.js",
  "module": "dist/dictate-button.es.js",
  "types": "dist/dictate-button.d.ts",
  "exports": {
    ".": {
      "types": "./dist/dictate-button.d.ts",
      "import": "./dist/dictate-button.es.js",
      "require": "./dist/dictate-button.cjs.js"
    },
    "./inject": {
      "import": "./dist/inject.es.js",
      "require": "./dist/inject.cjs.js"
    },
    "./inject-exclusive": {
      "import": "./dist/inject-exclusive.es.js",
      "require": "./dist/inject-exclusive.cjs.js"
    },
    "./inject-inclusive": {
      "import": "./dist/inject-inclusive.es.js",
      "require": "./dist/inject-inclusive.cjs.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx}'",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "solid-element": "^1.9.1",
    "solid-js": "^1.9.7"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.7",
    "vite-plugin-static-copy": "^3.1.1"
  },
  "homepage": "https://github.com/kkomelin/dictate-button",
  "repository": {
    "type": "git",
    "url": "https://github.com/kkomelin/dictate-button.git"
  },
  "bugs": {
    "url": "https://github.com/kkomelin/dictate-button/issues"
  }
}
